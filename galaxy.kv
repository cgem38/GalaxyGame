#: import menu menu

MainWidget:

<MainWidget>:
    menu_widget: menu_widget
    perspective_point_x: self.width/2
    perspective_point_y: self.height * 0.75
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg1.jpg'
    Label: 
        text: root.score_label
        font_name: 'fonts/Eurostile.ttf'
        font_size: dp(30)
        pos_hint: {"center_x": .1, "center_y": .9}
    MenuWidget:
        id: menu_widget
        Label: 
            text: root.score_label
            font_name: 'fonts/Eurostile.ttf'
            font_size: dp(30)
            pos_hint: {"center_x": .1, "center_y": .9}
        

        