#: import menu menu

#MenuWidget:

<MenuWidget>:
    canvas.before: 
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label: 
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .75}
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: {"center_x": .5, "center_y": .1}
        size_hint: .25, .15
        on_press: root.parent.on_menu_button_pressed() 
        background_normal: ''
        background_color: 1, .3, .4
        #^^^root.parent references this function from main.py. root.function would refer to 
        # this kv file's root .py file, which is menu.py, which does not have the function
    Label: 
        font_size: dp(20)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: "Select a Difficulty"
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        font_size: dp(16)
        font_name: 'fonts/Eurostile.ttf'
        text: "Easy"
        pos_hint: {"center_x": .5, "center_y": .54}
        size_hint: .12, .06
        on_press: root.parent.easy_difficulty_selected() 
        background_normal: ''
        background_color: 1, .3, .4
    Button:
        font_size: dp(16)
        font_name: 'fonts/Eurostile.ttf'
        text: "Medium"
        pos_hint: {"center_x": .5, "center_y": .46}
        size_hint: .12, .06
        on_press: root.parent.medium_difficulty_selected() 
        background_normal: ''
        background_color: 1, .3, .4
    Button:
        font_size: dp(16)
        font_name: 'fonts/Eurostile.ttf'
        text: "Hard"
        pos_hint: {"center_x": .5, "center_y": .38}
        size_hint: .12, .06
        on_press: root.parent.hard_difficulty_selected() 
        background_normal: ''
        background_color: 1, .3, .4
    Label: 
        font_size: dp(20)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.difficulty_selected
        pos_hint: {"center_x": .5, "center_y": .23}
    Button:
        font_size: dp(16)
        font_name: 'fonts/Eurostile.ttf'
        text: "Insane"
        pos_hint: {"center_x": .5, "center_y": .30}
        size_hint: .12, .06
        on_press: root.parent.insane_difficulty_selected() 
        background_normal: ''
        background_color: 1, .3, .4